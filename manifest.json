{
  "manifest_version": 3,
  "name": "Better Lichess",
  "version": "1.1.1",
  "description": "Adds proper knight arrows, better square highlighting, and custom colors to Lichess",
  "permissions": ["storage"],
  "host_permissions": ["https://lichess.org/*"],
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["icon.png"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "extension-icon.png",
    "48": "extension-icon.png",
    "128": "extension-icon.png"
  },
  "action": {
    "default_icon": "extension-icon.png",
    "default_title": "Better Lichess"
  }
}
